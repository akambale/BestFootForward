type User {
  id: ID! @id
  name: String!
  birthMonth: String!
  email: String! @unique
  password: String!
  blurbs: [Blurb!]!
  pics: [Pic!]!
  feedbackReceived: [Feedback!]! @relation(name: "Recieve")
  feedbackGiven: [Feedback!]! @relation(name: "Give")
  feedbackFlaged: [Feedback!]! @relation(name: "Flag")
}

type Blurb {
  id: ID! @id
  owner: User!
  text: String!
  ratings: [Rating!]!
}

type Pic {
  id: ID! @id
  owner: User!
  url: String!
  ratings: [Rating!]!
}

type Rating {
  id: ID! @id
  pic: Pic
  blurb: Blurb
  score: Int!
}

type Feedback {
  id: ID! @id
  text: String!
  createdAt: DateTime! @createdAt
  flagged: Boolean!
  flaggedBy: User @relation(name: "Flag")
  feedbackReceiver: User! @relation(name: "Recieve")
  feedbackGiver: User! @relation(name: "Give")
}